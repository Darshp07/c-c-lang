#include <stdio.h>

int main() {
    int a, b, c;

    printf("Enter three numbers (a, b, c): ");
    scanf("%d %d %d", &a, &b, &c);

    if (a > b) {
        if (a > c) {
            printf("The largest number is a = %d\n", a);
        } else {
            printf("The largest number is c = %d\n", c);
        }
    } else {
        if (b > c) {
            printf("The largest number is b = %d\n", b);
        } else {
            printf("The largest number is c = %d\n", c);
        }
    }

    return 0;
}
